<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <div class="nav-item" style="margin-top: 8px;">
        </div>
      </div>
    </div>
    <% if (username) { %>          
      <span>Logged in as: <%= username %></span>
      <form method="POST" action="/logout" style="display: inline-block;">
        <button class="btn btn-primary" type="submit">Logout</button>
      </form>        
    <% } else { %>                  
      <form method="POST" action="/login">
        <input type="text" name="username">
        <button class="btn btn-primary" type="submit">Login</button>
        <a class="btn btn-info" href="/register">Sign Up</a>
      </form>        
    <% } %>
  </nav>
</header>